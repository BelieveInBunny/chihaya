{
  "extends": [
    "config:best-practices",
    "docker:disableMajor",
    "security:openssf-scorecard"
  ],
  "ignorePresets": [
    "mergeConfidence:all-badges",
    "mergeConfidence:age-confidence-badges",
    "docker:pinDigests"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "semanticCommits": "disabled",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "golangci/golangci-lint"
      ],
      "extends": [
        "schedule:weekends"
      ],
      "automerge": true
    }
  ]
}
